@model vidly.Models.SendEmailTester
@{
    ViewData["Title"] = "Verify Pin";
}
<div>
    <h2>@ViewData["Title"]</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="VerifyPin">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="PinToVerify" class="control-label"></label>
                <input asp-for="PinToVerify" class="form-control" />
                <span asp-validation-for="PinToVerify" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Verify" class="btn btn-primary" />
            </div>
            <br>
            @ViewBag.Name
        </form>
    </div>
</div>

</div>
